<%= form_with model: [movie, review], local: true do |f| %>
  <div class="field">
    <%= f.label :score %><br>
    <%= f.number_field :score, min: 1, max: 10 %>
  </div>

  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>

  <%= f.hidden_field :movie_id, value: movie.id %>

  <div class="actions">
    <%= f.submit submit_button_text %>
  </div>
<% end %>

<%= link_to 'Back to Movie', movie_path(movie) %>
