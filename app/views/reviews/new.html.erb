<h2>Write a Review for <%= @movie.title %></h2>

<!-- Display the parameters passed to this page -->
<h3>Debug Params:</h3>
<pre><%= debug(params) %></pre>

<%= form_with model: [@movie, @review], local: true do |f| %>
  <div class="field">
    <%= f.label :score %><br>
    <%= f.number_field :score, min: 1, max: 10 %>
  </div>

  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>

  <%= f.hidden_field :movie_id, value: @movie.id %>

  <div class="actions">
    <%= f.submit "Submit Review" %>
  </div>
<% end %>

<%= link_to 'Back to Movie', movie_path(@movie) %>

