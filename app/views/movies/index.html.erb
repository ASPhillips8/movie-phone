<div>
  <%= link_to 'Home', user_path(current_user) %>
  <%= link_to 'Sign Out', signout_path, method: "delete" %>
</div>

<h1>Movie Library</h1>

<div>
  <h3>Filter movies:</h3>
  <%= form_with(url: movies_path, method: "get", local: true) do %>
    <%= text_field_tag :query, params[:query], placeholder: "Search by title" %>
    <%= select_tag "genre_id", options_from_collection_for_select(@genres, "id", "name", params[:genre_id]), include_blank: "Select Genre" %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<ul>
  <% @movies.each do |movie| %>
    <li>
      <%= link_to movie.title, movie_path(movie) %>
      - <%= movie.formatted_release_date %>
    </li>
  <% end %>
</ul>

